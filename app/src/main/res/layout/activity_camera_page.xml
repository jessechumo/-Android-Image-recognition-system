<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cameraPage">


    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="-17dp"
        app:srcCompat="@drawable/ic_undraw_camera_re_cnp4__2_"/>

    <Button
        android:id="@+id/captureImage1"
        android:layout_width="128dp"
        android:layout_height="57dp"
        android:layout_below="@+id/imageView21"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="354dp"
        android:layout_marginStart="54dp"
        android:background="@drawable/button_background"
        android:text="Camera"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button3"
        android:layout_width="128dp"
        android:layout_height="57dp"
        android:layout_below="@+id/imageView21"
        android:layout_marginStart="230dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="354dp"
        android:background="@drawable/button_background"
        android:text="Predict"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="314dp"
        android:layout_height="178dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="570dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/montserrat"
        android:text="Take a picture using the camera then press predict"
        android:textColor="#000000"
        android:textSize="21sp" />

</RelativeLayout>