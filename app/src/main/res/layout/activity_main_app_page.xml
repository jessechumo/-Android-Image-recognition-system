<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainAppPage"
    android:background="#EFEFEF">


    <Button
        android:id="@+id/takePhoto"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/button_background"
        android:text="Take Photo"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/importFromGallery"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/button_background"
        android:text="Import From Gallery"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/howToUse"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/button_background"
        android:text="How To Use"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/about"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/button_background"
        android:text="About"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="223dp"
        android:layout_height="149dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toTopOf="@+id/takePhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_undraw_mobile_photos_psm5__2_" />

</androidx.constraintlayout.widget.ConstraintLayout>